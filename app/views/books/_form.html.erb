<%= form_for(@book) do |f|%>
<% @book.errors.full_messages.each do |message| %>
<div class="be-red white top-space">
* <%= message %>
</div>
<% end %>
    <div class="field">
        <%= f.text_field :title, placeholder: "Title Book", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.text_field :author, placeholder: "Author", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.number_field :published, placeholder: "Published year", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.text_field :genre, placeholder: "Genre", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.number_field :stock, placeholder: "Stock", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.submit "UPDATE", class:"btn be-red white" %>
    </div>
<% end %>